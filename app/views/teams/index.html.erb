<%= render 'search' %>

<% @teams.each do |team| %>
  <div class='results'>
    <h2><%= team.name %> - <%= team.ds %></h2>
    <% team.team_type == 'mens' ? races = @mens_races : races = @womens_races %>
    <% races.each do |race| %>
      <%= render 'race', race: race, team: team %>
    <% end %>
  </div>
<% end %>

<div class='results'>
  <% unless @teams %>
    <h2> No teams found!</h2>
  <% end %>
</div>
